"resource/layout/screenshotmanager.layout" {
	styles {
		CScreenshotManager {
			minimum-width=660
			minimum-height=470
			render_bg {
				0="fill( x0, y0, x1, y1, lightGreyEnd )"

				3="fill( x0, y1-51, x1, y1-50, darkestGrey )"
				4="fill( x0+1, y1-50, x1-1, y1-49, greyHighlight )"
				5="gradient( x0+1, y1-49, x1-1, y1-1, grey, lightGreyEnd )"

				6="fill(x0,y0+26,x1-340, y1-51, darkGreyEnd)"

				7="fill(x1-341, y0+26, x1-340, y1-51, darkestGrey)"
			}
		}

		ThumbnailUnpublished {
			bgcolor="black"
			render {}
		}
		ThumbnailPublished {
			bgcolor="black"
			render {}
		}
		ThumbnailSelected {
			bgcolor="black"
			render {
				1="fill( x0 + 2, y0 + 1, x0 + 5, y1 + 0, blue )"//left
				2="fill( x1, y0 + 1, x1 + 3, y1 + 0, blue )"//right
				3="fill( x0 + 2, y0 + 1, x1 + 3, y0 + 4, blue )"//top
				4="fill( x0 + 2, y1-2, x1 + 3, y1 + 1, blue )"//btm
				5="image(x0+2,y0+1,x0+42,y0+41, graphics/screenshot_corner)"
			}
		}
		ThumbnailUploaded {
			bgcolor="black"
			image=""
			textcolor=none
			render {
				// lines around
				1="image(x0+3, y1-39, x1, y1, graphics/screenshot_cloud)"
			}
		}
		DarkRegionDetails {
			bgcolor="none"
		}
		SSDetails {
			bgcolor="black"
			minimum-width=320
			minimum-height=240
		}
		publishcaption {
			textcolor="White"
			font-size=17
			font-style="italic"
			inset=2
		}
		publishcaptionprompt {
			textcolor="111 111 111 255"
		}
		publishcharsleft {
			textcolor=White
		}
		publishcharsleft_toomanychars {
			textcolor=White
		}
		WrapPanel {
			bgcolor="none"
			inset="3 1 0 0"

			render_bg{}
		}

		gameselector {
			font-size=15
			font-size=14 [$LINUX]
			font-family=basefont
			font-weight=700
			inset="6 0 0 0"
			minimum-width=190
			minimum-height=10
		}

		ScreenshotLoadingThrobber {
			bgcolor=black
			minimum-width=100
			minimum-height=75
		}
		LargeSelectionCount {
			font-size=60
			font-family=basefont
			font-weight=700
		}
		NoSelectionTitle {
			font-size=24
			font-family=basefont
			font-weight=400
		}
		NoSelectionInstructions {
			font-size=16
			font-size=15
			font-size=14 [$LINUX]
			font-family=basefont
		}

		CScreenshotCaptionEntry:empty {
			bgcolor= "none"
			selectedtextcolor= "red"
			selectedbgcolor= "blue"
			shadowtextcolor= "darkestGrey"// this is the cursor color
			textcolor= "darkestGrey"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			padding-left=14
			inset-left=0
			inset-top=0

			render_bg {
				0="fill(x0+2,y0+2,x1-2,y1-2, White)"

				// TOP
				1="image(x0,y0,x0+3,y0+4, graphics/textEntry/topLeft)"
				2="image_tiled(x0+3,y0,x1-3,y0+4, graphics/textEntry/topMiddle)"
				3="image(x1-3,y0,x1,y0+4, graphics/textEntry/topRight)"

				// LEFT
				4="image_tiled(x0,y0+4,x0+3,y1-3, graphics/textEntry/leftMiddle)"

				// RIGHT
				5="image_tiled(x1-3,y0+4,x1,y1-3, graphics/textEntry/rightMiddle)"

				// BOTTOM
				6="image(x0,y1-3,x0+3,y1+1, graphics/textEntry/bottomLeft)"
				7="image_tiled(x0+3,y1-2,x1-3,y1+1, graphics/textEntry/bottomMiddle)"
				8="image(x1-3,y1-3,x1,y1+1, graphics/textEntry/bottomRight)"
			}
		}

		TextEntry {
			inset-left=4
			inset-top=6
		}
	}

	layout {
		region {
			name="selectorbar"
			height=80
			margin-left=8
			margin-top=30
			margin-right=340
		}
		region {
			name="list"
			width=max
			margin-left=8
			margin-top=65
			margin-right=340
			margin-bottom=51

		}

		place {
			control="selectorlabel"
			region="selectorbar"
			x=0
			y=-100
			width=0
			height=0
		}

		place {
			control="game_selector"
			region="selectorbar"
			x=0
			y=5
			dir=right
		}
		region {
			name="details"
			align=right
			width=335
			height=max
			margin-top=30
			margin-right=6
			margin-bottom=59
		}

		place {
			control="grid"
			region="list"
			x=0
			y=0
			width=max
			height=max
		}

		place {
			control="no_screenshots"
			region="list"
			align="top-center"
			y=50
		}
		place {
			control="DarkRegionDetails"
			region="details"
			x=0
			y=0
			z="-1"
			width=max
			height=max
		}

		place {
			control="SSDetails"
			region="details"
			align="top-center"
			y=0
			width=333
			height=250
		}

		place {
			control="SSDate"
			start="SSDetails"
			align=left
			margin-left=8
			margin-top=4
			dir=down
		}

		place {
			control="SSSize,SSSizeOriginal"
			start="SSDate"
			align=right
			margin-right=15
			dir=left
		}
		place {
			control="publish_caption"
			region="details"
			align=bottom
			width=max
			x=5
			height=40
			margin-right=3
			margin-bottom=55
		}

		place {
			control="publish_charsleft"
			region="details"
			x=5
			align=bottom
			margin-bottom=35
			height=20
			margin-right=5
		}
		place {
			control="null_placer"
			region="details"
			align=bottom
			width=1
			margin-bottom=2
		}

		place {
			control="delete_button,details_button,publish_button"
			start="null_placer"
			region="details"
			align=right
			x=5
			height=28
			margin-right=7
			margin-bottom=5
			spacing=5
		}

		place {
			control="spoiler_checkbox"
			region="details"
			start="null_placer"
			align=left
			x=5
			margin-right=7
			margin-bottom=5
			spacing=5
		}
		place {
			control="details_caption"
			region="details"
			align=bottom
			x=5
			width=max
			height=60
			margin-right=7
			margin-bottom=35
		}
		region {
			name="bottom"
			align=bottom
			width=max
			height=51
		}
		place {
			control="multiselect_button,view_local_library_button,view_screenshots"
			region="bottom"
			align=left
			height=28
			margin-left=12
			margin-top=12
			dir=right
			spacing=8
		}
		place {
			control="multi_img"
			region="details"
			align="top-center"
			y=80
		}

		place {
			control="multi_img_count"
			region="details"
			align="top-center"
			y=92
		}

		place {
			control="multi_img_selected"
			region=details
			align="top-center"
			y=180
		}

		place {
			control="multi_img_upload_size,multi_img_upload_size_info"
			region=details
			align="top-center"
			y=205
			spacing=5
		}

		place {
			control="multi_img_storage_remaining,multi_img_storage_remaining_info"
			region=details
			align="top-center"
			y=220
			spacing=5
		}

		place {
			control="multi_img_delete,multi_img_upload"
			region=details
			align="top-center"
			y=260
			spacing=8
		}
		place {
			control="file_not_loaded_label"
			region="details"
			align="top-center"
			y=140
		}

		place {
			control="instr_no_selection_title,instr_no_selection"
			region="details"
			y=40
			width=max
			margin-left=8
			margin-right=8
			dir=down
			spacing=30
		}
	}
}