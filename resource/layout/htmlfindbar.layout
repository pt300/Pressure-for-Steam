"resource/layout/htmlfindbar.layout" {
	styles {
		FindEntry {
			inset-left=0
			render_bg{
				1="image(x0-19, y0, x0+3, y0+25, graphics/search/left)"
				2="image_tiled(x0+3, y0, x1-8, y0+24, graphics/search/inner)"
				3="image(x1-8, y0, x1-2, y0+25, graphics/search/right)"
			}
		}

		CloseButtonSm {
			bgcolor=none
			inset="0 0 0 0"
			image="graphics/tab_close"
			render_bg{}
		}

		CloseButtonSm:hover {
			image="graphics/tab_close_hover"
			render_bg{}
		}

		NextButtonSm {
			bgcolor=none
			inset="0 0 0 0"
			image="graphics/icon_down_default"
			render_bg{}
		}

		NextButtonSm:hover {
			bgcolor=none
			inset="0 0 0 0"
			image="graphics/icon_down_hover"
			render_bg{}
		}

		PrevButtonSm {
			bgcolor=none
			inset="0 0 0 0"
			image="graphics/icon_up_default"
			render_bg{}
		}

		PrevButtonSm:hover {
			bgcolor=none
			inset="0 0 0 0"
			image="graphics/icon_up_hover"
			render_bg{}
		}
	}

	layout {
		place {
			control="FindEntry"
			align=left
			y=7
			width=180
			margin-left=24
			margin-right=26
		}

		place {
			control="FindCount"
			align=right
			y=7
			width=70
			margin-left=6
			margin-top=5
			margin-right=55
		}

		place {
			control="Previous,Next,Close"
			align=right
			width=22
			height=24
			margin-top=7
			margin-right=5
		}

		place {
			control="SearchThisPage"
			width=0
			height=0
		}
	}
}