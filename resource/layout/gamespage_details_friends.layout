"resource/layout/gamespage_details_friends.layout" {
	colors {
		GameDetailsFriends.ExtraVerticalSpacing=95
	}

	styles {
		// This overrides the default button.
		button {
			textcolor=blue
			padding=0

			render_bg {
				0="image(x1-5, y1-14, x1, y1-10, graphics/details_button)"
			}
		}

		button:hover {
			textcolor=lightestBlue
		}

		friendsdetails {
			bgcolor=black65
		}

		infolabel {
			textcolor=White
			font-size=15
			font-size=14 [$LINUX]
		}

		friendlabelmore {
			textcolor="grey"
			font-size=15
			font-size=14 [$LINUX]
			font-family=basefont
			inset="-3 0 0 0"
			render_bg {}
		}

		friendlabelmore:hover {
			textcolor="White"
			font-size=15
			font-size=14 [$LINUX]
			font-family=basefont
			inset="-3 0 0 0"
			render_bg {}
		}
	}

	layout {
		region {
			name=body
			width=max
			height=max
			margin=20
		}

		place {
			control=headerlabel
			region=body
			width=max
		}

		place {
			control=listplayingnow,listplayever
			region=body
			y=35
			width=max
			height=72
			margin=0
			dir=down
			spacing=0
		}

		place {
			control=viewall
			region=body
			align=bottom
			margin-left=-6
			margin-bottom=5
		}
	}
}