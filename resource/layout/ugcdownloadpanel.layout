"resource/layout/ugcdownloadpanel.layout" {
	styles {
		panelStyle {
			minimum-height=150
			bgcolor=none
			render {
				0="fill(x0,y0,x1,y0+1, black65)"
				1="fill(x0,y0+1,x1,y0+8, lightGreyEnd)"
				2="fill(x0,y0+1,x1,y0+2, grey25)"
				5="image(x0+11,y0+35,x1,y1, graphics/ugc_download_overlay)"
			}

			render_bg {
				1="gradient(x0,y1,x1,y1+6, black40, none)"
				2="fill(x0,y0,x1,y1, lightGreyEnd)"
				3="fill(x0,y0,x1,y0+1, greyHighlight)"
			}
		}

		panelStyleHighlight {
			minimum-height=150
			render {
				5="image(x0+11,y0+35,x1,y1, graphics/ugc_download_overlay)"
			}
			render_bg {
				0="fill(x0,y0,x1,y1+10, black65)"
			}
		}

		links {
			textcolor="blue"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-style=normal
			padding-left=0
			padding-top=0
			padding-bottom=0
			padding-right=18

			render_bg {
				0="image(x1-15,y0+2,x1-1,y1, graphics/news)"
			}
		}

		links:hover {
			textcolor="lightestBlue"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-style=normal
		}

		links:disabled {
			textcolor="grey"
		}

		rightcolumnlink:hover {
			textcolor=none
		}

		// The "Downloaded" label
		label2 {
			bgcolor=none
			textcolor="lightestGrey"
			font-size=15
			font-size=14 [$LINUX]
			font-style="regular"
		}

		// Name of the game/app
		ModuleHeading {
			bgcolor="none"
			textcolor="White"
			font-family=headerfont
			font-size="38"
			font-outerglow-color="black"
			font-outerglow-filtersize=3
			font-outerglow-offset=1
			font-style="outerglow"
		}

		// Contains the "Update Required" text.
		ModuleHeading2 {
			bgcolor="none"
			textcolor="orange"
			font-family=basefont
			font-size=16
			font-size=15 [$LINUX]
			font-weight=600
		}

		// Doesn't seem to be used for anything?
		panelBgColorActive {
			bgcolor=none
		}

		SlimProgressBar {
			textcolor=green
			render_bg {
				0="fill( x0, y0, x1, y1, black )"
				1="fill(x0,y1,x1,y1+1, grey25)"
			}
		}

		graphdownloadrate {
			font-family=basefont
			font-size="14"
			font-style="normal,regular"
			textcolor=orange
		}

		SmPauseButton {
			font-family=basefont
			font-size=1
			textcolor="none"
			bgcolor=none
			minimum-width=34
			render {
				1="image( x0 + 5, y0 + 4, x1, y1, graphics/pause )"
			}
		}

		SmResumeButton {
			font-family=basefont
			font-size=1
			textcolor="none"
			bgcolor=none
			minimum-width=34
			render {
				1="image( x0 + 5, y0 + 4, x1, y1, graphics/resume )"
			}
		}

		SmRemoveButton {
			textcolor=none
			font-size=1
			minimum-width=34
			render {
				1="image( x0 + 5, y0 + 4, x1, y1, graphics/remove_download )"
			}
		}

		ViewModsButton {
			inset-left=20
			//minimum-width=124
			inset-right=7
			render {
				1="image( x0 + 8, y0 + 9, x1, y1, graphics/icon_workshop )"
			}
		}
	}

	layout {
		region {
			name="bottom"
			align=bottom
			y=-18
			width="max"
			height=6
		}

		region {
			name="column1"
			x=11
		}

		region {
			name="column2"
			x=210
			width=max
		}

		region {
			name="column4"
			x=700
			width=max
			overflow=allow-horizontal
		}

		place {
			control="downloadprogressbar"
			region=bottom
			width=max
			height=2
			margin-left=17
			margin-right=16
			dir=right
		}

		// left-mid column
		place {
			control="namelabel"
			region="column1"
			x=5
			y=5
		}

		place {
			control="gameimage"
			region="column1"
			start=namelabel
			x=-5
			y=-12
			width=195
			height=85
			dir=down
		}

		place {
			control=workshopminibanner
			start=gameimage
			x=5
			y=-8
			width=0
			height=0
			dir=down
		}

		place {
			control="updatetypelabel"
			region="column2"
			align=left
			x=-5
			y=43 //line 1
		}

		place {
			control="downloadtotallabel,downloadtotalfield"
			region="column2"
			align=left
			margin-top=60 //line 2
			spacing=4
		}

		place {
			control="downloadfileslabel,downloadfilesfield"
			region="column2"
			align=left
			margin-top=75 //line 3
			spacing=4
		}

		place {
			control="starttimelabel,starttimefield"
			region="column2"
			align=left
			x=0
			margin-top=90 //line 4
			dir="right"
			spacing=4
		}

		place {
			control="timeremaininglabel,timeremainingfield"
			region="column2"
			align=left
			x=0
			margin-top=105 //line 5
			spacing=4
		}

		place {	//this probably doesn't work, so the minimum-width in the styles will have to do
			control="pauseresumebutton"
			width=34
		}

		place {
			control="viewmodsbutton,pauseresumebutton"
			region="column4"
			align=right
			//width=33
			height=33
			margin-top=20
			margin-right=16
			dir=right
			spacing=10
		}

		place {
			control="graphdownloadrate"
			region="column4"
			align=right
			margin-right=16
			y=124 //line 6 + 4px
		}
	}
}