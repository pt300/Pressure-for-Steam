"resource/layout/chattitlepanel.layout" {
	styles {
		menuButtonStyle {
			padding-top=6
			padding-bottom=4
			padding-right=5
			padding-left=2
			minimum-width=10
			inset-top=-2
		}

		menuButtonStyle:hover {
			render_bg {}
		}

		Label {
			font-family=basefont
			font-size=16
			font-size=15 [$LINUX]
			font-weight=600
			textcolor=White
			font-style="outerglow"
			font-outerglow-color="darkestGrey"
			font-outerglow-offset=1
			font-outerglow-filtersize=3
		}

		statuslabel {
			font-family=basefont
			textcolor=lightestGrey
			font-size=15
			font-size=14 [$LINUX]
			font-style="normal,regular,outerglow"
			font-outerglow-color="darkestGrey"
			font-outerglow-offset=1
			font-outerglow-filtersize=3
		}
	}

	layout {
		place {
			control="AvatarImage"
			x=1
			y=4
			align=left
			dir=right
			spacing=8
		}

		place {
			control="LockImage"
			width=10
			height=20
		}

		place {
			control="LockImage,NameLabel"
			start=AvatarImage
			x=5
			y=-3
			spacing=2
		}

		place {
			control=MenuButton
			start=NameLabel
			x=2
			y=-2
		}

		place {
			control="StatusLabel"
			start=AvatarImage
			align=left
			x=5
			y=26
		}
	}
}