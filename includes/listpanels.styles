				9="fill(x0-1,y1-1,x0,y1, black65)" // Bottom left
				10="fill(x0,y1,x0+1,y1+1, black65)" // Bottom Left
				11="fill(x1-1,y1,x1,y1+1, black65)" // Bottom Right
