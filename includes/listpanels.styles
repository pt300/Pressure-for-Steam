		"CGamesListPanel" {
			bgcolor="darkestGrey"
			selectedtextcolor="trueWhite"
			selectedbgcolor="blue"
			shadowtextcolor="grey"
			textcolor="white"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			inset="0 -3 0 0"
