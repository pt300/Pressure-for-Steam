"listpanels.styles" {
	styles {
		ListPanelCheckBox {
			textcolor="Label"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			inset="0 5 0 0"
			image="graphics/chkUnselStd_Sm"
		}

		ListPanelCheckBox:selected {
			image="graphics/chkSelStd_Sm"
		}

		ListPanelCheckBox:focus {
			bgcolor=none
			textcolor="Text"
			image= "graphics/chkUnselFocus_Sm"
		}

		ListPanelCheckBox:selected:focus {
			bgcolor=none
			textcolor="Text"
			image="graphics/chkSelFocus_Sm"
			render_bg {}
		}

		ListPanelCheckBox:disabled {
			bgcolor=none
			textcolor="TextDisabled"
			image="graphics/chkUnselDis_Sm"
		}

		ListPanelCheckBox:disabled:select {
			bgcolor=none
			textcolor="TextDisabled"
			//!! bug - this needs to look disabled
			image="graphics/chkUnselDis"
		}

		///////////////////////////////////////////////////////////////////

		"ListPanelColumnheader ListPanelCheckBox" {
			textcolor="Label"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			inset="4 0 0 0"
			image="graphics/chkUnSelFocus_Sm"
		}

		"ListPanelColumnHeader ListPanelCheckBox:selected" {
			inset="4 0 0 0"
			image="graphics/chkUnSelStd_Sm"
		}

		"ListPanelColumnheader ListPanelCheckBox:focus" {
			textcolor="TextHover"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			inset="4 0 0 0"
			image="graphics/chkUnSelFocus_Sm"
		}

		"ListPanelColumnheader ListPanelCheckBox:selected:focus" {
			bgcolor=none
			textcolor="TextHover"
			inset="4 0 0 0"
			image="graphics/chkSelFocus_Sm"
			render_bg {}
		}

		///////////////////////////////////////////////////////////////////

		ListPanelColumnheader {
			bgcolor="none"
			textcolor="white"
			font-family=semibold
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			font-style="regular,normal"
			inset="0 -1 0 0"
			minimum-height=24
			render {
				0="fill(x0,y1-3,x1,y1, darkGrey)"
				1="fill(x0,y0,x1,y0+1, greyHighlight)"
			}
			render_bg {
				1="gradient(x0,y0,x1,y1, grey, lightGreyEnd)"
			}
		}

		ListPanelColumnHeader:hover {
			textcolor="white"
			render_bg {
				0="fill(x0,y0,x1,y0+1, lightestGreyHighlight)"
				1="gradient(x0,y0,x1,y1, lighterGrey, grey)"
			}
		}

		///////////////////////////////////////////////////////////////////

	 	"Csteamrootdialog ListPanelSectionCollapser" {
			bgcolor=none
			inset="-2 1 0 1"
			padding-left=0
			minimum-height=24
			render_bg {
				0="gradient(x0-22, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0-22, y0+1, x1, y0+2, greyHighlight)"
				2="gradient(x0-22,y1,x1,y1, darkGrey, none)"
			}
		}

		"CGamesPage_Mini ListPanelSectionCollapser" {
			bgcolor=none
			inset="0 0 5 0"
			render_bg {
				0="gradient(x0-22, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0-22, y0+1, x1, y0+2, greyHighlight)"
				2="gradient(x0-22,y1,x1,y1, darkGrey, none)"
			}
		}

		///////////////////////////////////////////////////////////////////

		ListPanelColumnSelectButton {
			bgcolor=none
			inset="13 2 0 0"
	 		padding-left=0
	 		padding-right=0
	 		minimum-width=8
	 		minimum-height=24
			render {
				0="fill(x0,y1-3,x1,y1, darkGrey)"
				1="fill(x0,y0,x1,y0+1, greyHighlight)"
				2="fill(x0,y0,x0+1,y1-3, darkGrey)"
				3="image(x0+6,y0+7,x1,y1, graphics/cog)"
			}
			render_bg {
				0="gradient(x0,y0,x1,y1-1, grey, lightGreyEnd)"
			}
		}

		ListPanelColumnSelectButton:hover {
			render_bg {
				0="fill(x0,y0,x1,y0+1, lightestGreyHighlight)"
				1="gradient(x0,y0,x1,y1-1, lighterGrey, grey)"
			}
		}

		ListPanelColumnSelectButton:selected {
			render {
				5="image( x0 + 6, y0 + 7, x1, y1, graphics/cog_active )"
			}
			render_bg {
				0="fill(x0,y0,x1,y1-1, darkestGrey)"
			}
		}

		///////////////////////////////////////////////////////////////////

		ListPanelDragger {
			bgcolor="none"
			minimum-height=24
			render {
				//fill makes dragger visible
				2="fill( x0, y0, x0 + 1, y1-1, darkGrey )" // left
			}
		}

		"Page ListPanelDragger" {
			bgcolor="none"
			minimum-height=24
			render {
				//fill makes dragger visible
				2="fill( x0, y0, x0 + 1, y1, darkGrey )" // left
			}
		}

		ListPanelInterior {
			bgcolor="none"
			selectedbgcolor="blue"
			textcolor= "white"
			font-size=15
			font-size=14 [$LINUX]
			inset="0 0 0 0"
			render {}
			render_bg {}
		}

		"CSteamRootDialog ListPanel" {
			padding-left=2
			padding-right=2
		}

		"Csteamrootdialog ListPanelInterior" {
			bgcolor=none
			selectedbgcolor="blue"
			inset="0 0 0 0"
			render_bg {}
		}

		"Page ListPanelInterior" {
			inset="0 0 0 0"
			font-size=15
			font-size=14 [$LINUX]
			bgcolor=none
			textcolor=green
			selectedbgcolor="trueWhite"
			render_bg {}
		}

		///////////////////////////////////////////////////////////////////

		ListPanelSectionHeader {
			textcolor=white
			font-family=semibold
			font-style="regular,normal"
			inset="0 1 0 0"
			minimum-height=24
			render_bg {
				0="gradient(x0-22, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0-22, y0+1, x1, y0+2, greyHighlight)"
				2="gradient(x0-26,y1,x1,y1+1, darkGrey, none)"
			}
		}

		ListPanelSectionHeader:hover {
			textcolor=trueWhite
		}

		///////////////////////////////////////////////////////////////////

		ListPanel {
			bgcolor=darkestGrey
			selectedtextcolor="trueWhite"
			selectedbgcolor=Blue
			textcolor="white"
			font-family=basefont
			font-size=15
			font-size=14 [$LINUX]
			font-weight=400
			render {}
			render_bg {
				0="fill(x0,y0,x1,y1, darkestGrey)"

				// Lines around
				1="fill(x0-1,y0+1,x0,y1-1, black90)" // Left
				2="fill(x0+1,y0-1,x1-1,y0, black90)" // Top
				3="fill(x1,y0+1,x1+1,y1-1, black90)" // Right
				4="fill(x0+1,y1,x1-1,y1+1, black90)" // Bottom

				// Corner pixels
				5="fill(x0-1,y0,x0,y0+1, black65)" // Top Left
				6="fill(x0,y0-1,x0+1,y1, black65)" // Top Left
				7="fill(x1-1,y0-1,x1,y0, black65)" // Top Right
				8="fill(x1,y0,x1+1,y0+1, black65)" // Top Right
				9="fill(x0-1,y1-1,x0,y1, black65)" // Bottom left
